<div class="container bg">

    <div class="row">
        <div class="center col-sm-12">
            <img src="assets/img/burger.jpg" alt="Eat-Da-Burger App">
            <h1>Eat-Da-Burger App</h1>
            <p></p>
        </div>
    </div>
    <!-- end .row -->

    <div class="row">
        <div class="col-sm-6">

            <br>
            <h2>Burgers Available To Eat!</h2>

            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}

                    <form action="burger/eat/{{id}}" method="POST" id="test">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour It!</button>
                    </form>

                </li>
                {{/unless}}
                {{/each}}
            </ul>

        </div>

        <div class="col-sm-6">

            <h2>Burgers That Have Been Eaten!</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}

            </li>
            {{/if}}
            {{/each}}

        </div>

    </div>
    <!-- end .row -->

    <div class="row">
        <div class="center col-sm-12">

            <h2>Add A Burger!</h2>

            {{!-- <form class="create-update-form" action="/" method="POST"> --}}
                <form action="burger/create/{{id}}" method="POST" id="create-update-form">
                    <div class="form-group">
                        <p>Enter a burger you want to order and click the Submit Order button.</p>
                        <input type="text" id="inputText" name="burger_name" placeholder="Enter the burger you want to order here">
                    </div>

                    <button class="btn-primary" type="submit">Submit Order</button>
                </form>

        </div>

    </div>
    <!-- end .row -->

</div>